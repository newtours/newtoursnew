{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
    
  {% if page.top_header %}
      <div class="top-header-block justify-content-between text-center">
        <div class="container">  
          <div class="row">
              <div class="col-md-3  ">
                <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="navbar-brand ">       
                    <img src="/sites/default/files/logo2.png" alt="logo" class="img-fluid d-inline-block align-top "  id="main-top-logo"/>   
                    <div class="top-credential" >
                        <div>89-11 Merrick Blv</div>
                        <div>Tel: 718-934-7644 </div>
                        <div>name@queenslibrary.org</div>
                    </div>
                    </a>
              </div>      
                            
          <div class="col-md-9 d-flex flex-row">
            {{ page.top_header }}
          </div>
      </div>
    </div>
   </div>
  {% endif %}    
    
  {% embed '@bengreen_radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'white',
    utility_classes: ['bg-blue'],
  } %}
  
    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="pt-5 pb-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page__content">
        <div class="container">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
